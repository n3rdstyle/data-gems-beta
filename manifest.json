{
  "manifest_version": 3,
  "name": "Data Gems",
  "version": "2.1.0",
  "description": "Your personal AI companion for collecting and organizing data gems",
  "author": "Data Gems Team",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "https://n3rdstyle.app.n8n.cloud/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://grok.com/*",
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content-scripts/context-engine-api.js",
        "content-scripts/profile-injector.js",
        "content-scripts/prompt-optimizer.js"
      ],
      "css": [
        "content-scripts/profile-injector.css",
        "content-scripts/prompt-optimizer.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://grok.com/*",
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content-scripts/context-engine-bridge-main.js",
        "utils/ai-helper.js",
        "utils/context-selector.js"
      ],
      "run_at": "document_end",
      "all_frames": false,
      "world": "MAIN"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["complete-questions-catalog.csv"],
      "matches": ["<all_urls>"]
    }
  ]
}
